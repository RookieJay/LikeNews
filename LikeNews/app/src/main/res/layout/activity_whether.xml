<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flWhether"
    tools:context=".view.activity.WhetherActivity">

    <LinearLayout
        android:id="@+id/llWhether"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/gray"
        android:orientation="vertical">
        
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@color/colorPrimary">
    
            <ImageView
                android:id="@+id/barLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home_white_24dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:visibility="visible" />
    
            <TextView
                android:id="@+id/barTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="titletitletitletitletitltitletitletitletitletitletitletitletitletitletitlee"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"/>
    
            <TextView
                android:id="@+id/tvBarRight"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                tools:visibility="visible"
                tools:text="14:46"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"/>
            
        </android.support.v7.widget.Toolbar>
        
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/llTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/blue"
                    android:gravity="center_vertical"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        tools:text="25°C"/>
                    <TextView
                        android:id="@+id/tvWhether"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        tools:text="中转大雨"/>
                </RelativeLayout>
    
                <RelativeLayout
                    android:id="@+id/llQuality"
                    android:layout_below="@+id/llTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/blue"
                    android:padding="5dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/txtAirQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="空气质量"/>
                    <TextView
                        android:id="@+id/tvWhether"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        tools:text="中转大雨"/>
                </RelativeLayout>
            </RelativeLayout>
            
           
        </android.support.v4.widget.NestedScrollView>
        
        
        
        
    </LinearLayout>
    
</FrameLayout>