<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:background="@color/black">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/blue">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="5月19日"
                android:textColor="@color/white"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvWeekDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="星期日"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tvDate"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="成都"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tvWeekDay"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvRealTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="16:55"
                android:textColor="@color/white"
                android:layout_below="@+id/tvDate"
                android:gravity="center"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tvWhether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="多云"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tvTempDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="18°/25°"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@+id/tvWhether"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/ivWhether"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@drawable/w_icon_0"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        
        
    </android.support.v7.widget.CardView>
    
</LinearLayout>